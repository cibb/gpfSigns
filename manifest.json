{
  "manifest_version": 2,  
  "name": "__MSG_name__",
  "short_name": "GPFSigns",
  "description": "__MSG_descr__",
  "version": "1.2",
  "options_page":"config.html",  
  "content_scripts": [
  {     
      "matches": ["https://productforums.google.com/*"],
      "js": ["js/content.js"]
  }],

  "default_locale": "es",

  "browser_action": {
    "default_icon": "images/48.png",
    "default_popup": "popup.html"
  },
   "icons": {
      "128": "images/128.png",
      "16": "images/16.png"
   },
   "permissions": [ "notifications", "storage", "tabs", "alarms", "https://productforums.google.com/*", "https://fonts.googleapis.com/*" ]
}